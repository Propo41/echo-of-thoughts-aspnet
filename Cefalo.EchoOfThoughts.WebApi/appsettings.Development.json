{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=ALI-AHNAF\\SQLEXPRESS;Initial Catalog=echo-of-thoughts;Integrated Security=True;Pooling=False;TrustServerCertificate=True"
  },
  "Jwt": {
    "Issuer": "https://echoofthoughts.online/",
    "Audience": "https://echoofthoughts.online/",
    "Key": "random secret key"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information"
    },
    // writing information and debug level logs to separate files
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "../logs/information-logs.txt",
          "restrictedToMinimumLevel": "Information",
          "outputTemplate": "{Timestamp:MM-dd HH:mm:ss} {Level:u3} {Message:lj}{NewLine}",
          "rollingInterval": "Day" // a new log file will be created per day
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "../logs/debug-logs.txt",
          "restrictedToMinimumLevel": "Debug",
          "outputTemplate": "{Timestamp:MM-dd HH:mm:ss} {Level:u3} {Message:lj}{Exception}{NewLine}",
          "rollingInterval": "Day"
        }
      }
    ]
  }
}
